<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/view_root"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.suyou.media.ui.widget.AutoScrollViewPager
        android:id="@+id/scroll_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.suyou.media.ui.widget.CircleFlowIndicator
        android:id="@+id/indicator"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/scroll_pager"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        app:point_normal_color="@android:color/white"
        app:point_selected_color="@color/colorPrimary"
        app:space="@dimen/margin_10"/>
</RelativeLayout>